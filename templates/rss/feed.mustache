<?xml version="1.0" encoding="utf-8" ?>
<rss version="2.0">
<channel>
  <title>{{title}}</title>
  <link>{{link}}</link>
  <description>{{description}}</description>
  <language>en-us</language>
  <ttl>240</ttl>   <!-- 4 hours -->
  <webMaster>hello@tldr.io (Tldr Team)</webMaster>
  <image>
    <url>http://tldr.io/assets/img/fbicon.png</url>
    <title>tldr.io</title>
    <link>http://tldr.io</link>
  </image>

  {{#tldrs}}
    <item>
      <title>{{title}}</title>
      <link>http://tldr.io/tldrs/{{_id}}/{{slug}}</link>
      <guid isPermaLink="false">{{_id}}</guid>
      <pubDate>{{pubDate}}</pubDate>
      <description>
      <![CDATA[
        {{#imageUrl}}
          <img style="max-width: 300px;" src="{{imageUrl}}" alt="{{title}}">
        {{/imageUrl}}
        <ul>
        {{#summaryBullets}}
          <li>{{.}}</li>
        {{/summaryBullets}}
        </ul>
        <br>
        <i>{{#creator.username}}Tldr created by <a href="http://tldr.io/{{creator.username}}">{{creator.username}}</a>{{/creator.username}}</i><br><br>
        <a href="{{originalUrl}}">Read complete article</a>

      ]]>
      </description>
    </item>
  {{/tldrs}}

</channel>
</rss>
