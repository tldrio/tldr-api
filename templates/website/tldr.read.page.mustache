<div class="tldr-read-container">

  <div class="tldr-tldr">
    <div class="tldr-header">
      <img class="tldr-favicon tldr-favicon-ellipsis" src="http://www.google.com/s2/favicons?domain={{hostname}}">
      <p class="tldr-title">
        <a target="_blank" href="{{url}}">{{title}}</a>
        <span class="tldr-hostname">({{hostname}})</span>
      </p>
    </div>

    <div class="tldr-metadata">
      {{#creator}}
      <span>
        tl;dr by
          <span><a href="/{{creator.username}}" target="_blank"><em>{{creator.username}}</em></a></span>
      </span>
      {{/creator}}
    </div>

    <div class="tldr-summary">
      <ul>
        {{#summaryBullets}}
        <li class="tldr-bullet">
          <i class="icon-stop"></i>
                {{.}}
        </li>
        {{/summaryBullets}}
      </ul>
    </div>
  </div>

  <div class="tldr-tldr">
    <div class="sub-tldr">
      <a href="{{url}}" target="_blank" id="read-full-article" class="btn btn-primary">Read full article</a>
      <div class="sharing-container">
        <button class="btn btn-inverse dropdown-toggle" data-toggle="dropdown">
          <i class="icon-white icon-share-alt"></i>
          Share
        </button>
      </div>
    </div>
  </div>


</div>

