<li class="media discover-tldr-item collapsed">
<span style="display:none;" class="discover-tldr-data"
  data-tldr-id="{{_id}}"
  data-tldr-title="{{title}}"
  data-tldr-twitterHandle="{{creator.twitterHandle}}"
  data-tldr-summary="{{summaryBullets}}"
  data-tldr-thankedBy="{{thankedBy}}"
  data-tldr-originalUrl="{{originalUrl}}"
  ></span>
  <div class="discover-tldr-header">
    <div class="media-body">
      <h4 class="media-heading">
        <a href="#" class="discover-tldr-title" alt="tldr of {{title}}">
          {{title}}
        </a>
        <a href="{{originalUrl}}" target="_blank" class="discover-tldr-external-link"><i style="font-size:14px;" class="icon-external-link"></i></a>
      </h4>
      <div class="tldr-metadata">
        tl;dr by
        <span>
          {{^anonymous}}
          <a href="/{{creator.username}}" target="_blank"><em>{{creator.username}}</em></a>
          {{/anonymous}}
          {{#anonymous}}
          anonymous
          {{/anonymous}}
        </span>
        via
        <a href="{{websiteUrl}}/discover/{{domain.name}}">{{domain.name}}</a>,
        in
        {{#categories}}
        <a href="{{websiteUrl}}/discover/{{slug}}{{#specificLanguage}}?lang=de{{/specificLanguage}}" class="topic-link">{{name}}</a>
        {{/categories}}
      </div>
      <div class="tldr-stats">
        <span title="Read {{readCount}} times.">
          <i class="icon-eye-open"></i> <span class="discover-tldr-readcount">{{readCount}}</span>
        </span>
        <span title="It takes ~{{timeSaved}} to read the original article.">
          &nbsp;&nbsp;<i class="icon-time"></i> {{timeSaved}}
        </span>
      </div>
    </div>
  </div>

  <div class="discover-tldr-foldable">
    <div class="discover-tldr-summary">
      <ul>
        {{#summaryBullets}}
        <li class="discover-tldr-bullet">
          <i class="icon-stop"></i>
          {{.}}
        </li>
        {{/summaryBullets}}
      </ul>
    </div>
    <div class="tldr-actions">
      <div class="thank-container">
        <div class="btn-group">
          <button class="btn btn-link thank" >
            Thank contributor
          </button>
        </div>
      </div>
      <div class="sharing-container">
        <div class="btn-group dropup">
          <button class="btn btn-link dropdown-toggle" data-toggle="dropdown">
            Share article with tl;dr
          </button>
        </div>
        <div class="btn-group dropup">
          <button class="btn btn-link dropdown-toggle" data-toggle="dropdown">
            Save full article for later
          </button>
        </div>
      </div>
    </div>
  </div>
</li>
