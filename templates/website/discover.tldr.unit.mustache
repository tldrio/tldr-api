<li class="media discover-tldr-item">
<span style="display:none;" class="discover-tldr-data"
  data-tldr-id="{{tldr._id}}"
  data-tldr-title="{{tldr.title}}"
  data-tldr-twitterHandle="{{tldr.creator.twitterHandle}}"
  data-tldr-summary="{{tldr.summaryBullets}}"
  data-tldr-thankedBy="{{tldr.thankedBy}}"
  data-tldr-originalUrl="{{tldr.originalUrl}}"
  ></span>
  <div class="discover-tldr-header">
    <a class="pull-left" href="#">
      {{#tldr.imageUrl}}
      <img class="media-object discover-tldr-image" src="{{tldr.imageUrl}}" alt="{{tldr.title}}">
      {{/tldr.imageUrl}}
      {{^tldr.imageUrl}}
      <img class="media-object discover-tldr-image" src="http://www.gravatar.com/avatar/?f=y&d=identicon" alt="{{tldr.title}}">
      {{/tldr.imageUrl}}
    </a>
    <div class="media-body">
      <h4 class="media-heading">{{tldr.title}}</h4>
      <div class="tldr-metadata">
        tl;dr by
        <span>
          {{^tldr.anonymous}}
          <a href="/{{tldr.creator.username}}" target="_blank"><em>{{tldr.creator.username}}</em></a>
          {{/tldr.anonymous}}
          {{#tldr.anonymous}}
          anonymous
          {{/tldr.anonymous}}
        </span>
        in
        <a href="{{websiteUrl}}/domains/{{tldr.hostname}}">{{tldr.hostname}}</a>,
        {{#tldr.topics}}
        <a href="{{websiteUrl}}/topics/{{.}}" class="topic-link" target="_blank">{{.}}</a>
        {{/tldr.topics}}
      </div>
      <div class="tldr-stats">
        <span title="Read {{tldr.readCount}} times.">
          <i class="icon-eye-open"></i> {{tldr.readCount}}
        </span>
        <span title="Thanked {{tldr.tyCount}} times.">
          &nbsp;&nbsp;<i class="icon-beer"></i> {{tldr.tyCount}}
        </span>
        <span title="It takes ~{{tldr.timeSaved}} to read the original article.">
          &nbsp;&nbsp;<i class="icon-time"></i> {{tldr.timeSaved}}
        </span>
      </div>
    </div>
  </div>

  <div class="discover-tldr-foldable">
    <div class="discover-tldr-summary">
      <ul>
        {{#tldr.summaryBullets}}
        <li class="tldr-bullet">
        <i class="icon-stop"></i>
        {{.}}
        </li>
        {{/tldr.summaryBullets}}
      </ul>
    </div>
    <div class="tldr-actions">
      <div class="thank-container">
        <div class="btn-group">
          <button class="btn btn-link thank" >
            Thank contributor
          </button>
        </div>
      </div>
      <div class="sharing-container">
        <div class="btn-group dropup">
          <button class="btn btn-link dropdown-toggle" data-toggle="dropdown">
            Share article with tl;dr
          </button>
        </div>
        <div class="btn-group dropup">
          <button class="btn btn-link dropdown-toggle" data-toggle="dropdown">
            Save full article for later
          </button>
        </div>
      </div>
      <!--<ul>-->
        <!--<li><a href="">Thank contributor</a></li>-->
        <!--<li> &middot; <a href="">Share article with tldr</a></li>-->
        <!--<li> &middot; <a href="">Save full article for later</a></li>-->
        <!--<li> &middot; <a href="">Embed tldr</a></li>-->
      <!--</ul>-->
    </div>
  </div>
</li>
