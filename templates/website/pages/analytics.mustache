<section class="marketing">
  <h1>tl;dr of your impact on the world</h1>
  <h2 class="marketing-byline"><p>{{subtitle}}</p></h2>
  <div class="tldr-base-unit" id="badass">
    {{#neverActive}}
      <div class="image-and-motivational-text">
        <img src="assets/img/yunocontribute.jpg">
        <h2>You should try it, you won't regret it!</h2>
      </div>
    {{/neverActive}}
    {{#isNewHere}}
      <div class="image-and-motivational-text">
        <img src="assets/img/happy-thumbs-up.png">
        <h2>You will feel great about it, we promise!</h2>
      </div>
    {{/isNewHere}}

    {{#hasBeenActive}}
    <ul class="nav nav-pills">
      <li class="active"><a href="#past-30-days" data-toggle="pill">Past 30 days</a></li>
      <li><a href="#all-time" data-toggle="pill">All time</a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="past-30-days">
        {{#active}}
          {{#past30Days}}
            {{>website/userStats}}
            {{>website/userChartBar}}
          {{/past30Days}}
        {{/active}}
        {{#wasActive}}
          <div class="image-and-motivational-text">
            The world is forever grateful for your contributions but since you stopped, this panda is sad!<br><br>
            <img src="assets/img/sadpanda.png">
          </div>
        {{/wasActive}}
      </div>
      <div class="tab-pane" id="all-time">
        {{#allTime}}
          {{>website/userStats}}
          {{>website/userChartBar}}
          {{>website/userChartLine}}
        {{/allTime}}
      </div>
    </div>
    {{/hasBeenActive}}
  </div>
</section>

<div id="all-the-user-data" style="display: none;" data-analytics="{{analytics}}"></div>
