<section class="marketing admin">
  <h1>Tldrs in need of a category</h1>
  <div class="tldr-base-unit">
    <div class="latest-tldrs-created">
      <ul class="unstyled">
        {{#tldrs}}
        <li data-tldr-id="{{_id}}">
          <!-- Channels -->
          <div style="width: 25%; float: right;">
            <select class="category" multiple>
              <option></option>
              {{#displayCategories}}
              <option>{{name}}</option>
              {{/displayCategories}}
            </select>
            <button class="btn btn-primary btn-mini moderationDone" type="button">Done</button>
          </div>

          <!-- Tldr -->
          <div style="width: 75%;">
            <div class="tldr-icon"></div>
            <a href="{{url}}" target="_blank" style="color: #333; text-decoration: none;">{{title}}</a>
            <span class="tldr-hostname tldr-hostname-list">
              ({{domain.name}})
            </span>
            <div class="tldr-metadata-tldrs">
              <span class="tldr-creator">
                contributed by <em>{{#creator}} {{>website/usernameLink}} {{/creator}}</em>
              </span>
              <span class="tldr-readcount">
                &middot; read {{readCount}} times
              </span>
              <a href="/tldrs/{{_id}}/{{slug}}"><span class="label">page</span></a>
              <a href="{{dbguiUrl}}/tldrs/{{_id}}/edit"><span class="label label-info">in DB</span></a>
            </div>
            <ul>
              {{#summaryBullets}}
              <li style="list-style-type: none;">
                <i class="icon-stop"></i>
                {{.}}
              </li>
              {{/summaryBullets}}
            </ul>
          </div>

          <hr style="clear: both; height: 1px; background-color: #333; border: none;">
        </li>
        {{/tldrs}}
      </ul>

      {{^tldrs}}
        Woohoo, all tldrs have a category!
      {{/tldrs}}
    </div>
  </div>
</section>
