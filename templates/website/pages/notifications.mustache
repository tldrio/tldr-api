<!--Impressing title-->
<header class="jumbotron">
  <h1>Notifications</h1>
</header>

<section id="notifications-container">

  <div class="row">
    <div class="span7 offset3">

      <input type="button" class="btn btn-small offset5" id="mark-all-notif-read" value="Mark all as read">

      <ul id="notifications-collection">

        <div class="notification-separator"> </div>
        {{#notifications}}
        <li class="notification-list-wrapper">

          <div class="row">
            <div class="span7">
              <div class="notification-list-el {{#unseen}}unseen-notif{{/unseen}}" data-id="{{_id}}">

                <div class="row">
                  <div class="span5">
                    Someone read your awesome <strong><a href="{{websiteUrl}}/tldrs/{{tldr._id}}">tl;dr</a></strong> of 
                    <strong><a href="{{tldr.url}}">{{tldr.title}}</a></strong>. 
                  </div>

                  {{#unseen}}
                  <div class="span1">
                    <i class="icon-ok-sign mark-notif-read"></i>
                  </div>
                  {{/unseen}}
                </div>

                <div class="row">
                  <div class="span6">
                    <div class="notification-date">
                      {{displayDate}}
                    </div>
                  </div>
                </div>

              </div>

            </div>
          </div>

          <div class="notification-separator"> </div>
        </li>

        {{/notifications}}

      </ul>
    </div>
  </div>

</section>







