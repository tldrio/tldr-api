<!--Impressing title-->
<header class="jumbotron">
  <h1>Notifications</h1>
</header>

<section id="notifications-container">

  <ul id="notifications-collection">

    {{#notifications}}

    <li class="notification-list-wrapper">
      <div class="row-fluid">
        <div class="span6 offset3">
          <div class="notification-list-el {{#unseen}}unseen-notif{{/unseen}}" data-id="{{_id}}">
            {{#from.username}}
            <strong>{{from.username}}</strong>
            {{/from.username}}
            {{^from.username}}
            <strong>An anonymous user</strong>
            {{/from.username}}

            just {{type}} your tl;dr <strong>{{tldr.title}}</strong>. 
            <div class="notification-date">
              {{displayDate}}
            </div>
          </div>
          <div class="notification-separator">
          </div>
        </div>
      </div>
    </li>

    {{/notifications}}

  </ul>

</section>







