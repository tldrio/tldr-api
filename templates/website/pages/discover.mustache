<div class="container main-container">
  <div class="row">
    <div class="span3 topics-list-column">
      <ul class="nav nav-list topics-list">
        {{#tldrsByCategory}}
        <li class="{{active}}">
        <a href="/discover/{{categoryName}}">
            <i class="icon-chevron-right"></i>
            {{categoryName}}
          </a>
        </li>
        {{/tldrsByCategory}}
      </ul>
    </div>
    <div class="span9 discover-feed-column">
      <div class="tab-content discover-feed-container">
        <div class="discover-feed-options">
          <span class="options">
            <a alt="Newest summaries" href="/discover/{{activeCategory}}/newest" class="{{#newest}}option-chosen{{/newest}}">Newest</a>
            /
            <a alt="Most read summaries" href="/discover/{{activeCategory}}/mostread" class="{{#mostread}}option-chosen{{/mostread}}">Most read</a>
          </span>
          <span class="options options-visual pull-right">
            <a class="option-expand" alt="Expand all summaries" href="#">Expand</a>
            /
            <a alt="Collapse all summaries" class="option-collapse option-chosen" href="#">Collapse</a>
          </span>
        </div>
        <div class="tab-pane active">
          <ol class="media-list discover-tldr-list">
            {{#tldrs}}
              {{>website/discover.tldr.unit}}
            {{/tldrs}}
          </ol>
        </div>
        <div class="discover-load-more">
          <button class="btn btn-primary">
            <img src="/assets/img/happy-derp.small.png">
            Load more...
          </button>
        </div>
      </div>
    </div>
  </div>
