<div class="container main-container">
  <div class="row">
    <div class="span3 topics-list-column">
      <ul class="nav nav-list topics-list">
        {{#categories}}
        <li>
        <a href="#{{.}}" data-toggle="tab">
            <i class="icon-chevron-right"></i>
            {{.}}
          </a>
        </li>
        {{/categories}}
      </ul>
    </div>
    <div class="span9 discover-feed-column">
      <div class="tab-content discover-feed-container">
        <div class="discover-feed-options">
          <span class="options">
            <a alt="Newest summaries" href="#newest">Newest</a>/<a alt="Most read summaries" href="#mostread">Most read</a>
          </span>
          <span class="options options-visual pull-right">
            <a class="option-chosen option-expand" alt="Expand all summaries" href="#">Expand</a>/<a alt="Collapse all summaries" class="option-collapse" href="#">Collapse</a>
          </span>
        </div>
        {{#tldrsByCategory}}
        <div class="tab-pane" id="{{categoryName}}">
          <ol class="media-list discover-tldr-list">
            {{#tldrs}}
              {{>website/discover.tldr.unit}}
            {{/tldrs}}
          </ol>
        </div>
        {{/tldrsByCategory}}
        <div class="discover-load-more">
          <button class="btn btn-primary">
            <img src="/assets/img/happy-derp.small.png">
            Load more...
          </button>
        </div>
      </div>
    </div>
  </div>
