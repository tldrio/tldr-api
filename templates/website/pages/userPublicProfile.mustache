{{#userNotFound}}
<div class="alert alert-error">
  This user doesn't exist!
</div>
{{/userNotFound}}


{{^userNotFound}}

<div class="row-fluid">
<div class="span6 offset3 well-white">

  <!-- Username, reputation, basic info and avatar -->
  <div class="row-fluid">
    <div class="span12">
      <div class="user-profile-username">
        <h1>{{user.username}}</h1><br>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="user-general-info">
      <img src="{{user.gravatar.url}}&s=140"  class="img-polaroid avatar" alt="avatar">
      <div class="span7">
        <table class="table">
          <tbody>
            <tr>
              <th>Web tamer since:</th>
              <td>{{user.createdAtReadable}}</td>
            </tr>
            <tr>
              <th>Awesome tl;drs created:</th>
              <td>{{user.numberTldrsCreated}}</td>
            </tr>
            <tr>
              <th>About {{user.username}}:</th>
              <td>{{user.bio}}</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>


  <!-- Latest created tldrs if any -->
  {{#user.numberTldrsCreated}}
  <div class="row-fluid">
      <div class="span12">
      <div class="latest-tldrs-created">
        <strong>Latest tldrs created by {{user.username}}:</strong>
        <ul>
        {{#user.tldrsCreated}}
          <li> <a href="/tldrs/{{_id}}" target="_blank">{{title}}</a>
          </li>
        {{/user.tldrsCreated}}
        </ul>
    </div>
    </div>
  </div>
  {{/user.numberTldrsCreated}}


</div>
</div>

{{/userNotFound}}
