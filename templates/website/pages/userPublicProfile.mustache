{{#userNotFound}}
<div class="alert alert-error">
  This user doesn't exist!
</div>
{{/userNotFound}}


{{^userNotFound}}

<div class="row">
  <div class="span12 well-white">
    <div class="row">

      <div class="span3 vcard" itemscope itemtype="http://schema.org/Person">
        <div class="avatar">
          <img width="210px" height="210px" src="{{user.gravatar.url}}&s=210"  class="img-polaroid" alt="{{user.username}}">
        </div>

        <div>
          <h1 itemprop="name">{{user.username}}</h1>
        </div>

        <hr>

        <div>
          <dl class="dl-horizontal">
            <dt>
            <i class="icon icon-time"></i>
            <span>Joined on:</span>
            </dt>
            <dd>
            <span>{{user.createdAtReadable}}</span>
            </dd>
            <dt>
            <i class="icon icon-gift"></i>
            <span>tl;drs created:</span>
            </dt>
            <dd>
            <span>{{user.numberTldrsCreated}}</span>
            </dd>
          </dl>
        </div>

        <hr>

        {{#user.bio}}
        <div>
          <dl>
            <dt>
            <i class="icon icon-user"></i>
            <span>About {{user.username}} </span>
            </dt>
            <dd>
            <span itemprop="description">
              {{user.bio}}
            </span>
            </dd>
          </dl>
        </div>
        {{/user.bio}}
      </div>

      <!-- Latest created tldrs if any -->
      {{#user.numberTldrsCreated}}
      <div class="offset1 span8">
        <div class="latest-tldrs-created">
          <h3>Latest webpages tamed:</h3>
          <ul class="unstyled">
            {{#user.tldrsCreated}}
            <li>
              <a href="/tldrs/{{_id}}" target="_blank">{{title}}</a>
            </li>
            {{/user.tldrsCreated}}
          </ul>
        </div>
      </div>
      {{/user.numberTldrsCreated}}

    </div>
  </div>
</div>


{{/userNotFound}}
