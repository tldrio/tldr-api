{{#userNotFound}}
<div class="alert alert-error">
  This user doesn't exist!
</div>
{{/userNotFound}}


{{^userNotFound}}

<div class="row-fluid">
<div class="span8 offset2 well-white">
  <h1>{{user.username}} ({{user.tldrsCreated.length}})</h1><br>
  Joined on {{user.createdAtReadable}}<br><br>

  {{#user.createdMoreThanOneTldr}}
    <strong>Latest tldrs created by {{user.username}}:</strong>
  {{/user.createdMoreThanOneTldr}}
  {{#tldrsCreatedToDisplay}}
    <li> <a href="/tldrs/{{_id}}" target="_blank">{{title}}</a>
    </li>
  {{/tldrsCreatedToDisplay}}
</div>
</div>

{{/userNotFound}}
