<div class="accordion" id="accordion2">
  {{#tldrs}}
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#{{slug}}">
        {{title}}
      </a>
    </div>
    <div id="{{slug}}" class="accordion-body collapse">
      <div class="accordion-inner">

        <div class="row">
          <div class="tldr-base-unit page-tldr-container">
            <div class="tldr-read-container">
              <div class="tldr-tldr">
                <div class="tldr-header">
                  <img class="tldr-favicon tldr-favicon-ellipsis" src="http://www.google.com/s2/favicons?domain={{domain.name}}" alt="Favicon for {{domain.name}}">
                  <h1 class="tldr-title tldr-page-title"><a target="_blank" href="{{originalUrl}}">{{title}}</a></h1>
                  <span class="tldr-hostname">({{domain.name}})</span>
                </div>

                <div class="tldr-metadata">
                  <span>
                    tl;dr by
                    <span><a href="/{{creator.username}}" target="_blank"><em>{{creator.username}}</em></a></span>
                    - read {{readCount}} times
                  </span>
                </div>

                {{#imageUrl}}
                <div class="tldr-image">
                  <img src="{{imageUrl}}" alt="{{title}}">
                </div>
                {{/imageUrl}}

                <div class="tldr-summary">
                  <ul>
                    {{#summaryBullets}}
                    <li class="tldr-bullet">
                      <i class="icon-stop"></i>
                      {{.}}
                    </li>
                    {{/summaryBullets}}
                  </ul>
                </div>

                <!-- just in case the image is taller than the summary -->
                {{#imageUrl}}
                <div class="clearfix"> </div>
                {{/imageUrl}}
              </div>

              <div class="tldr-tldr">
                <div class="sub-tldr">
                  <a href="{{originalUrl}}" target="_blank" id="read-full-article" class="btn btn-link">Read full article</a>
                  <div class="sharing-container">
                    <div class="btn-group dropup">
                      <button class="btn btn-link dropdown-toggle" data-toggle="dropdown">
                        Share tl;dr
                      </button>
                    </div>
                    <div class="btn-group dropup">
                      <button class="btn btn-link dropdown-toggle" data-toggle="dropdown">
                        Save full article for later
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>



      </div>
    </div>
  </div>
  {{/tldrs}}


</div>

